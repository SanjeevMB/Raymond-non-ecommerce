{{ 'related-magazines.css' | asset_url | stylesheet_tag }}
{% style %}
  .padding-{{ section.id }} {
    padding-top:{{ section.settings.padding_top1 }}px;
    padding-bottom: {{ section.settings.padding_bottom1 }}px;
  }

 @media screen and (min-width:750px){
  .padding-{{ section.id }} {
    padding-top:{{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  } 
 }
{% endstyle %}

<div class="padding-{{ section.id }} color-{{ section.settings.color_scheme }}">
  <div class="h1 page-width magazine-heading">{{ section.settings.heading_text }}</div>
  <div class="magazine-top">
    {% for block in section.blocks %}
        <div class="magazine-wrapper">
      <div class="magaine_img-container">
        {% render 'picture',
          class: '',
          mobileSrc: block.settings.image_for_mobile,
          desktopSrc: block.settings.image_for_desktop
        %}
      </div>
      <div class=" magazine-text-wrapper">
        <div class="magazine-text">
          <a href="{{ block.settings.button_link }}">
         {{ block.settings.heading_text1 }}
         </a>
        </div>
      </div>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "magazine",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "label": "Heading Text",
      "id": "heading_text"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "background-1"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 52
    },
    {
      "type": "range",
      "id": "padding_top1",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Mobile Top Padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom1",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Mobile Bottom Padding",
      "default": 52
    }
  ],
  "blocks": [
    {
      "type": "image_text",
      "name": "image text",
      "limit": 4,
      "settings": [
        {
          "type": "image_picker",
          "label": "Add Image ",
          "id": "image_for_desktop"
        },
        {
          "type": "richtext",
          "label": "Image Text",
          "id": "heading_text1"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "magazine"
    }
  ]
}
{% endschema %}
