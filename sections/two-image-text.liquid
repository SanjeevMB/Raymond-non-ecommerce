{{ 'two-image-text.css' | asset_url | stylesheet_tag }}

{% style %}
  .padding-{{ section.id }} {
  padding-top:{{ section.settings.padding_top1 }}px;
  padding-bottom: {{ section.settings.padding_bottom1 }}px;
  }
  @media screen and (min-width:750px){
    .padding-{{ section.id }} {
  padding-top:{{ section.settings.padding_top }}px;
  padding-bottom: {{ section.settings.padding_bottom }}px;
  }
  }
{% endstyle %}
<div class="padding-{{ section.id }} color-{{ section.settings.color_scheme }}"  >
  <div class="two-image-top page-width content-{{ section.settings.desktop_content_position }} ">
    <div class="two-image-text">
      {% for block in section.blocks %}
        <div class="two-img-heading h2">{{ block.settings.heading }}</div>
        <div class="body-small two-image-para">
          {{ block.settings.para }}
        </div>
      {% endfor %}
    </div>
    <div class="two-img-container">
      <div class="two-img-wrapper">
        {% render 'picture', mobileSrc: section.settings.img2, desktopSrc: section.settings.img1 %}
      </div>
      <div class="two-img-wrapper">
        {% render 'picture', mobileSrc: section.settings.img4, desktopSrc: section.settings.img3 %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "two-image",
  "tag": "section",
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "background-1"
    },
    {
      "type": "image_picker",
      "id": "img1",
      "label": "First Imgae For Desktop"
    },
    {
      "type": "image_picker",
      "id": "img2",
      "label": "First Imgae For mobile"
    },
    {
      "type": "image_picker",
      "id": "img3",
      "label": "Second Imgae For Desktop"
    },
    {
      "type": "image_picker",
      "id": "img4",
      "label": "Second Imgae For Mobile"
    },
    {
      "type": "select",
      "id": "desktop_content_position",
      "options": [
        {
          "value": "top",
          "label": "t:sections.image-with-text.settings.desktop_content_position.options__1.label"
        },
        {
          "value": "middle",
          "label": "t:sections.image-with-text.settings.desktop_content_position.options__2.label"
        },
        {
          "value": "bottom",
          "label": "t:sections.image-with-text.settings.desktop_content_position.options__3.label"
        }
      ],
      "default": "top",
      "label": "t:sections.image-with-text.settings.desktop_content_position.label"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 52
    },
    {
      "type": "range",
      "id": "padding_top1",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Mobile top Padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom1",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Mobile Bottom Padding",
      "default": 52
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "t:sections.image-with-text.blocks.heading.name",
      "limit": 1,
      "settings": [
        {
          "type": "inline_richtext",
          "id": "heading",
          "default": "Image with text",
          "label": "t:sections.image-with-text.blocks.heading.settings.heading.label"
        },
        {
          "type": "textarea",
          "id": "para",
          "default": "Add Paragraph",
          "label": " Add Paragraph here"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "two-image-text"
    }
  ]
}
{% endschema %}
