{{ 'contact.css' | asset_url | stylesheet_tag }}

<div class="contact-information">
   
    <div class="contact-information-container color-{{ section.settings.color_scheme }}" >
        <div class="contact-information-subcontainer ">
        {% if section.settings.heading != blank %}
        <div class="h2 information-heading"> {{ section.settings.heading }}</div>
        {% endif %}
        {% if section.settings.Information1 != blank %}
        <div class="caption information-address informatiion-first-address"> {{ section.settings.Information1 }} </div>
         {% endif %}
         {% if section.settings.Information2 != blank %}
        <div class="caption information-address info-two"> {{ section.settings.Information2 }}</div>
        {% endif %}

        {% if section.settings.mobile_number != blank %}
        <div class="caption information-contact"> <span>{% render 'icon' with 'mobile-svg' %}</span> +91 {{ section.settings.mobile_number }}</div>
        {% endif %}
       
        {% if section.settings.email_address != blank %}
        <div class="caption information-contact"> {% render 'icon' with 'email-svg' %} {{ section.settings.email_address }}</div>
        {% endif %}
        </div>

    </div>
    <div class="contactmap-container">
      {{ section.settings.map }}

    </div>
</div>



{% schema %}
{
  "name": "contact information",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "label": "Contact Heading",
      "id": "heading",
      "default": "Contact Us"
    },
    {
      "type": "text",
      "label": "  Add Address Information",
      "id": "Information1"
    },
    {
      "type": "text",
      "label": "Add Address Information",
      "id": "Information2"
    },
    {
      "type": "number",
      "label": "Add Mobile Number",
      "id": "mobile_number"
    },
    {
      "type": "text",
      "label": "Add Email Address",
      "id": "email_address"
    },
    {
      "type": "textarea",
      "label": "Add Google Address",
      "id": "map"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "background-1"
    }
  ],
  "presets": [
    {
      "name": "contact information"
    }
  ]
}
{% endschema %}
    